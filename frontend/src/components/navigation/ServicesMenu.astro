---
import { getCollection } from 'astro:content';

// Get services from content collection
const servicesEntries = await getCollection('services');
const services = servicesEntries.map(entry => ({
  title: entry.data.title,
  description: entry.data.description,
  icon: entry.data.icon || '📋',
  link: entry.slug
}));

// Separate core and advanced services based on category
const coreServices = services.filter(service => 
  service.title.includes('On Page') || 
  service.title.includes('Off Page') || 
  service.title.includes('Technical') || 
  service.title.includes('Local') || 
  service.title.includes('Consultation')
);

const advancedServices = services.filter(service => 
  !coreServices.includes(service)
);

// Fallback data if no services found
const fallbackCoreServices = [
  {
    title: "On Page SEO",
    icon: "📊",
    description: "Optimize your website content and structure for better search rankings",
    link: "/services/on-page-seo"
  },
  {
    title: "Off Page SEO",
    icon: "🔗",
    description: "Build quality backlinks and improve your site's authority",
    link: "/services/off-page-seo"
  },
  {
    title: "Technical SEO",
    icon: "⚙️",
    description: "Fix technical issues and improve site performance for search engines",
    link: "/services/technical-seo"
  },
  {
    title: "Local SEO",
    icon: "📍",
    description: "Dominate local search results and attract nearby customers",
    link: "/services/industry-seo/local-seo"
  },
  {
    title: "SEO Consultation",
    icon: "💬",
    description: "Expert consulting and planning for scalable organic growth",
    link: "/services/seo-consultation"
  }
];

const fallbackAdvancedServices = [
  {
    title: "Programmatic SEO",
    icon: "🤖",
    description: "Scalable SEO using data-driven content generation and templates",
    link: "/services/advanced-seo/programmatic-seo"
  },
  {
    title: "Mobile SEO",
    icon: "📱",
    description: "Optimize your mobile site for faster load and better engagement",
    link: "/services/mobile-seo"
  },
  {
    title: "Multilingual SEO",
    icon: "🌐",
    description: "Reach global audiences with optimized content in multiple languages",
    link: "/services/multilingual-seo"
  },
  {
  title: "AI SEO",
  icon: "🧠",
  description: "Leverage AI-powered strategies for advanced SEO optimization",
  link: "/services/industry-seo/ai-seo-automation"
},
  {
    title: "Site Migration",
    icon: "🚚",
    description: "Migrate entire sites with zero SEO loss or ranking issues",
    link: "/services/site-migration"
  },
  {
    title: "Content Creation",
    icon: "✍️",
    description: "Create high-quality, SEO-optimized content that ranks",
    link: "/services/content-creation"
  },
  {
    title: "Keyword Research",
    icon: "🔍",
    description: "Discover high-value keywords with low competition",
    link: "/services/keyword-research"
  },
  {
    title: "Free SEO Audit",
    icon: "✅",
    description: "Get a comprehensive analysis of your website's SEO health",
    link: "/services/free-audit"
  }
];

// Use fallback data if no services found
const displayCoreServices = coreServices.length > 0 ? coreServices : fallbackCoreServices;
const displayAdvancedServices = advancedServices.length > 0 ? advancedServices : fallbackAdvancedServices;
---

<div class="absolute top-full left-0 w-full bg-white shadow-xl border-t border-gray-100 z-50 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 ease-in-out">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex gap-8">
      
      <!-- Left Sidebar - Categories -->
      <div class="w-48 flex-shrink-0">
        <div class="space-y-2">
          <!-- Team Category (Active) -->
          <button class="w-full flex items-center justify-between px-4 py-3 bg-gray-50 rounded-lg text-left group">
            <span class="text-sm font-medium text-gray-900">Team</span>
            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
          
          <!-- Industry Category -->
          <button class="w-full flex items-center justify-between px-4 py-3 rounded-lg text-left hover:bg-gray-50 group">
            <span class="text-sm font-medium text-gray-700">Industry</span>
            <svg class="w-4 h-4 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
        </div>
        
        <!-- Bottom Link -->
        <div class="mt-6 pt-4 border-t border-gray-200">
          <a href="/services" class="flex items-center text-sm font-medium text-blue-600 hover:text-blue-700">
            See all teams
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Main Content Area - Services in Columns -->
      <div class="flex-1">
        <div class="grid md:grid-cols-2 gap-8">
          
          <!-- Left Column -->
          <div class="space-y-4">
            {displayCoreServices.slice(0, 4).map((service) => (
              <a 
                href={service.link}
                class="group flex items-start space-x-3 p-3 rounded-lg hover:bg-gray-50 transition-colors duration-200"
              >
                <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                  <span class="text-sm">{service.icon}</span>
                </div>
                <div class="flex-1 min-w-0">
                  <h4 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-200">
                    {service.title}
                  </h4>
                  <p class="text-xs text-gray-600 mt-1 leading-relaxed">
                    {service.description}
                  </p>
                </div>
              </a>
            ))}
          </div>
          
          <!-- Right Column -->
          <div class="space-y-4">
            {displayAdvancedServices.slice(0, 4).map((service) => (
              <a 
                href={service.link}
                class="group flex items-start space-x-3 p-3 rounded-lg hover:bg-gray-50 transition-colors duration-200"
              >
                <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                  <span class="text-sm">{service.icon}</span>
                </div>
                <div class="flex-1 min-w-0">
                  <h4 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-200">
                    {service.title}
                  </h4>
                  <p class="text-xs text-gray-600 mt-1 leading-relaxed">
                    {service.description}
                  </p>
                </div>
              </a>
            ))}
          </div>
          
        </div>
      </div>
      
      <!-- Featured Section -->
      <div class="w-64 flex-shrink-0">
        <div class="bg-gradient-to-br from-green-400 to-green-600 rounded-lg p-4 text-white">
          <div class="flex items-center space-x-3 mb-3">
            <div class="w-10 h-10 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
              <span class="text-lg">🚀</span>
            </div>
            <div>
              <h4 class="text-sm font-semibold">SEOWebster Pro</h4>
              <p class="text-xs opacity-90">Premium SEO Suite</p>
            </div>
          </div>
          <p class="text-xs mb-3 leading-relaxed">
            Join thousands of businesses using SEOWebster to dominate search results and grow their online presence.
          </p>
          <a href="/contact" class="inline-flex items-center text-xs font-medium underline underline-offset-2 hover:no-underline">
            Learn More
            <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
      
    </div>
  </div>
</div> 