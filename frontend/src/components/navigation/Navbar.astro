<script>
  // Global Mega Menu Manager - prevents conflicts between menus
  interface MegaMenuManager {
    currentMenu: string | null;
    showMenu: (menuName: string) => void;
    hideMenu: (menuName: string) => void;
    hideAllMenus: () => void;
  }

  declare global {
    interface Window {
      MegaMenuManager: MegaMenuManager;
    }
  }

  window.MegaMenuManager = {
    currentMenu: null,
    
    showMenu: function(menuName: string) {
      this.hideAllMenus();
      this.currentMenu = menuName;
      
      // Add a small delay to ensure previous menu is hidden
      setTimeout(() => {
        const menu = document.querySelector(`.${menuName}-mega-menu`);
        const overlay = document.querySelector(`.${menuName}-mega-menu-overlay`);
        
        if (menu) {
          menu.classList.remove('invisible', 'opacity-0');
          menu.classList.add('visible', 'opacity-100');
        }
        if (overlay) {
          overlay.classList.remove('invisible', 'opacity-0');
          overlay.classList.add('visible', 'opacity-100');
        }
      }, 50);
    },
    
    hideMenu: function(menuName: string) {
      if (this.currentMenu === menuName) {
        this.currentMenu = null;
      }
      
      const menu = document.querySelector(`.${menuName}-mega-menu`);
      const overlay = document.querySelector(`.${menuName}-mega-menu-overlay`);
      
      if (menu) {
        menu.classList.add('invisible', 'opacity-0');
        menu.classList.remove('visible', 'opacity-100');
      }
      if (overlay) {
        overlay.classList.add('invisible', 'opacity-0');
        overlay.classList.remove('visible', 'opacity-100');
      }
    },
    
    hideAllMenus: function() {
      const allMenus = document.querySelectorAll('[class*="-mega-menu"]:not([class*="overlay"])');
      const allOverlays = document.querySelectorAll('[class*="-mega-menu-overlay"]');
      
      allMenus.forEach(menu => {
        menu.classList.add('invisible', 'opacity-0');
        menu.classList.remove('visible', 'opacity-100');
      });
      
      allOverlays.forEach(overlay => {
        overlay.classList.add('invisible', 'opacity-0');
        overlay.classList.remove('visible', 'opacity-100');
      });
      
      this.currentMenu = null;
    }
  };

  // Mobile menu functionality
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileDropdownToggles = document.querySelectorAll('.mobile-dropdown-toggle');
    const navbar = document.getElementById('navbar');

    // Toggle mobile menu
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
        
        // Toggle hamburger icon
        const svg = this.querySelector('svg');
        if (svg) {
          if (mobileMenu.classList.contains('hidden')) {
            svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
          } else {
            svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>';
          }
        }
      });
    }

    // Mobile dropdown functionality
    mobileDropdownToggles.forEach(toggle => {
              toggle.addEventListener('click', function(this: HTMLElement) {
          const targetId = this.getAttribute('data-target');
          if (targetId) {
            const targetMenu = document.getElementById(targetId);
            const arrow = this.querySelector('svg');
            
            if (targetMenu && arrow) {
              targetMenu.classList.toggle('hidden');
              arrow.classList.toggle('rotate-180');
            }
          }
        });
    });

    // Close mobile menu when clicking outside
    document.addEventListener('click', function(event) {
      if (mobileMenu && !mobileMenu.contains(event.target as Node) && !mobileMenuButton?.contains(event.target as Node)) {
        mobileMenu.classList.add('hidden');
        const svg = mobileMenuButton?.querySelector('svg');
        if (svg) {
          svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
        }
      }
    });

    // Sticky navbar scroll effect
    window.addEventListener('scroll', function() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      
      if (navbar) {
        // Add enhanced shadow when scrolled
        if (scrollTop > 10) {
          navbar.classList.add('shadow-lg');
          navbar.classList.remove('shadow-sm');
        } else {
          navbar.classList.remove('shadow-lg');
          navbar.classList.add('shadow-sm');
        }
      }
    });
  });
</script> 