  {
    title: "Healthcare & Medical",
    subtitle: "SEO for healthcare professionals and medical practices",
    icon: "üè•",
    services: [
      { name: "Dental SEO", url: "/services/industry-seo/dental-seo" },
      { name: "Medical Practice SEO", url: "/services/industry-seo/medical-seo" },
      { name: "Chiropractor SEO", url: "/services/industry-seo/chiropractor-seo" },
      { name: "Plastic Surgeon SEO", url: "/services/industry-seo/plastic-surgeon-seo" },
      { name: "Therapist SEO", url: "/services/industry-seo/therapist-seo" },
      { name: "Hospital SEO", url: "/services/industry-seo/hospital-seo" }
    ]
  },
  {
    title: "Professional Services",
    subtitle: "SEO for lawyers, consultants, and professional firms",
    icon: "üíº",
    services: [
      { name: "Law Firm SEO", url: "/services/industry-seo/law-seo" },
      { name: "Accountant SEO", url: "/services/industry-seo/accountant-seo" },
      { name: "Financial Advisor SEO", url: "/services/industry-seo/financial-advisor-seo" },
      { name: "Insurance Agency SEO", url: "/services/industry-seo/insurance-seo" },
      { name: "Architecture Firm SEO", url: "/services/industry-seo/architecture-seo" },
      { name: "Engineering Firm SEO", url: "/services/industry-seo/engineering-seo" }
    ]
  },
  {
    title: "Home & Trade Services",
    subtitle: "SEO for contractors and home service businesses",
    icon: "üîß",
    services: [
      { name: "Plumber SEO", url: "/services/industry-seo/plumber-seo" },
      { name: "HVAC SEO", url: "/services/industry-seo/hvac-seo" },
      { name: "Roofer SEO", url: "/services/industry-seo/roofer-seo" },
      { name: "Electrician SEO", url: "/services/industry-seo/electrician-seo" },
      { name: "Landscaping SEO", url: "/services/industry-seo/landscaping-seo" },
      { name: "Construction SEO", url: "/services/industry-seo/construction-seo" }
    ]
  },
  {
    title: "Technology & Business",
    subtitle: "SEO for tech companies, startups, and digital businesses",
    icon: "üíª",
