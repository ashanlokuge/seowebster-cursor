---

<!-- Industry SEO Mega Menu Container -->
<div class="industry-seo-megamenu relative group">
  
  <!-- Desktop Mega Menu (Hidden on Mobile) -->
  <div class="hidden lg:block">
    <!-- Trigger Button -->
    <button class="text-gray-700 hover:text-[#ff6200] text-sm font-medium transition-colors duration-200 flex items-center group-hover:text-[#ff6200]">
      Industry SEO
      <svg class="w-4 h-4 ml-1 group-hover:rotate-180 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>
    
    <!-- Mega Menu Overlay -->
    <div class="fixed inset-0 bg-black/20 backdrop-blur-sm opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 ease-out z-40"></div>
    
    <!-- Mega Menu Content -->
    <div class="absolute top-full left-1/2 transform -translate-x-1/2 mt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 ease-out z-50">
      
      <!-- Triangle Pointer -->
      <div class="relative">
        <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-6 border-r-6 border-b-6 border-transparent border-b-white drop-shadow-sm"></div>
        <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-6 border-r-6 border-b-6 border-transparent border-b-gray-200"></div>
      </div>
      
      <!-- Main Menu Container -->
      <div class="bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden min-w-[900px] max-w-[1000px]">
        
        <!-- Header Section -->
        <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-8 py-6 border-b border-gray-200">
          <div class="text-center">
            <h3 class="text-2xl font-bold text-gray-900 mb-2">Industry SEO Services</h3>
            <p class="text-gray-600 text-base max-w-2xl mx-auto">Specialized SEO strategies tailored for your industry's unique challenges and opportunities</p>
          </div>
        </div>
        
        <!-- Categories Grid -->
        <div class="p-8">
          <div class="grid grid-cols-4 gap-8">
            {industryCategories.map((category) => (
              <div class="space-y-4">
                <!-- Category Header -->
                <div class="space-y-2">
                  <div class="flex items-center space-x-2">
                    <span class="text-2xl">{category.icon}</span>
                    <h4 class="font-bold text-lg text-gray-900 leading-tight">{category.title}</h4>
                  </div>
                  <p class="text-sm text-gray-600 leading-relaxed">{category.subtitle}</p>
                </div>
                
                <!-- Services List -->
                <nav class="space-y-1">
                  {category.services.map((service) => (
                    <a 
                      href={service.url}
                      class="block px-3 py-2.5 text-sm font-medium text-gray-700 rounded-lg transition-all duration-200 hover:bg-orange-50 hover:text-orange-700 hover:translate-x-1 group/item"
                    >
                      <div class="flex items-center justify-between">
                        <span>{service.name}</span>
                        <svg class="w-4 h-4 opacity-0 group-hover/item:opacity-100 transition-opacity duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      </div>
                    </a>
                  ))}
                </nav>
              </div>
            ))}
          </div>
        </div>
        
        <!-- Footer CTA -->
        <div class="bg-gradient-to-r from-orange-500 to-red-500 px-8 py-6">
          <div class="flex items-center justify-between">
            <div class="text-white">
              <h4 class="font-bold text-lg mb-1">Get Expert Industry SEO Help</h4>
              <p class="text-orange-100 text-sm">Our specialists know every industry inside and out.</p>
            </div>
            <a 
              href="/contact" 
              class="bg-white text-orange-600 px-6 py-3 rounded-lg font-semibold hover:bg-orange-50 transition-colors duration-200 flex items-center space-x-2 group"
            >
              <span>Get Free Consultation</span>
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
        
      </div>
    </div>
  </div>
  
  <!-- Mobile Accordion (Hidden on Desktop) -->
  <div class="lg:hidden">
    <!-- Mobile Toggle Button -->
    <button 
      class="mobile-industry-toggle w-full text-left px-3 py-2 text-base font-medium text-gray-700 hover:text-[#ff6200] hover:bg-gray-50 rounded-md transition-colors duration-200 flex items-center justify-between"
      aria-expanded="false"
      aria-controls="mobile-industry-menu"
    >
      Industry SEO
      <svg class="w-4 h-4 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>
    
    <!-- Mobile Accordion Content -->
    <div 
      id="mobile-industry-menu"
      class="hidden space-y-4 bg-gray-50 rounded-lg mt-2 p-4"
    >
      {industryCategories.map((category) => (
        <div class="space-y-2">
          <div class="flex items-center space-x-2 px-2">
            <span class="text-lg">{category.icon}</span>
            <h5 class="font-semibold text-sm text-gray-800">{category.title}</h5>
          </div>
          <div class="pl-8 space-y-1">
            {category.services.map((service) => (
        <a 
          href={service.url}
                class="block px-3 py-2 text-sm text-gray-600 hover:text-[#ff6200] rounded-md transition-colors duration-200 hover:bg-white"
        >
          {service.name}
        </a>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
  
</div>

<script>
  // Mobile dropdown functionality
  document.addEventListener('DOMContentLoaded', function() {
    const mobileToggle = document.querySelector('.mobile-industry-toggle');
    const mobileMenu = document.getElementById('mobile-industry-menu');
    
    if (mobileToggle && mobileMenu) {
      mobileToggle.addEventListener('click', function(this: HTMLElement) {
        const isExpanded = this.getAttribute('aria-expanded') === 'true';
        const arrow = this.querySelector('svg');
        
        // Toggle menu visibility
        if (isExpanded) {
          mobileMenu.classList.add('hidden');
          this.setAttribute('aria-expanded', 'false');
          if (arrow) {
            arrow.classList.remove('rotate-180');
          }
        } else {
          mobileMenu.classList.remove('hidden');
          this.setAttribute('aria-expanded', 'true');
          if (arrow) {
            arrow.classList.add('rotate-180');
          }
        }
      });
    }
  });
</script>

<style>
  /* Industry SEO Mega Menu Styles */
  .industry-seo-megamenu {
    position: relative;
  }
  
  /* Desktop mega menu positioning and animations */
  .industry-seo-megamenu .group:hover .opacity-0 {
    opacity: 1;
  }
  
  .industry-seo-megamenu .group:hover .invisible {
    visibility: visible;
  }
  
  /* Smooth transitions for all interactive elements */
  .industry-seo-megamenu .transition-all,
  .industry-seo-megamenu .transition-colors,
  .industry-seo-megamenu .transition-transform,
  .industry-seo-megamenu .transition-opacity {
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Enhanced hover effects */
  .industry-seo-megamenu .hover\:translate-x-1:hover {
    transform: translateX(0.25rem);
  }
  
  /* Mobile responsive adjustments */
  @media (max-width: 1023px) {
    .industry-seo-megamenu .lg\:block {
      display: none;
    }
    
    .industry-seo-megamenu .lg\:hidden {
      display: block;
    }
  }
  
  @media (min-width: 1024px) {
    .industry-seo-megamenu .lg\:hidden {
      display: none;
    }
    
    .industry-seo-megamenu .lg\:block {
      display: block;
    }
  }
  
  /* Ensure proper spacing and touch targets on mobile */
  @media (max-width: 1023px) {
    .industry-seo-megamenu a,
    .industry-seo-megamenu button {
      min-height: 48px;
      display: flex;
      align-items: center;
    }
  }
  
  /* Focus states for accessibility */
  .industry-seo-megamenu a:focus,
  .industry-seo-megamenu button:focus {
    outline: 2px solid #ff6400;
    outline-offset: 2px;
    border-radius: 0.5rem;
  }
  
  /* Custom border utilities for triangle pointers */
  .border-l-6 {
    border-left-width: 6px;
  }
  
  .border-r-6 {
    border-right-width: 6px;
  }
  
  .border-b-6 {
    border-bottom-width: 6px;
  }
  
  /* Backdrop blur support */
  .backdrop-blur-sm {
    backdrop-filter: blur(4px);
  }
  
  /* Group item hover states */
  .group\/item:hover .opacity-0 {
    opacity: 1;
  }
  
  /* Ensure mega menu appears above other content */
  .industry-seo-megamenu .z-40 {
    z-index: 40;
  }
  
  .industry-seo-megamenu .z-50 {
    z-index: 50;
  }
</style> 