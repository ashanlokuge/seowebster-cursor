---

<!-- Background Overlay for Focus Effect -->
<div class="cms-mega-menu-overlay fixed inset-0 bg-black bg-opacity-30 backdrop-blur-sm z-[998] opacity-0 invisible transition-all duration-300 ease-out"></div>

<!-- CMS SEO Mega Menu Container - Perfectly centered relative to viewport -->
<div class="cms-mega-menu fixed left-1/2 transform -translate-x-1/2 bg-white z-[1000] opacity-0 invisible transition-all duration-300 ease-out" style="top: calc(64px + 20px); width: min(90vw, 1200px); border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.15); padding: 40px;">
  
  <!-- Desktop 4-Column Grid Layout -->
  <div class="hidden lg:grid grid-cols-4 gap-8">
    
    <!-- Columns 1-3: CMS Categories -->
    {cmsCategories.slice(0, 3).map((category) => (
      <div class="cms-category">
        <!-- Category Header -->
        <h3 class="text-xl font-bold mb-3" style="color: #ff6400;">
          {category.title}
        </h3>
        <p class="text-sm mb-6 leading-relaxed" style="color: #6B7280;">
          {category.subtitle}
        </p>
        
        <!-- Services List -->
        <nav class="space-y-3">
          {category.services.map((service) => (
            <a 
              href={service.url}
              class="block text-base transition-colors duration-200 hover:underline"
              style="color: #272d3e;"
              onmouseover="this.style.color='#ff6400'"
              onmouseout="this.style.color='#272d3e'"
            >
              {service.name}
            </a>
          ))}
        </nav>
      </div>
    ))}
    
    <!-- Column 4: Call-to-Action Section -->
    <div class="cms-cta-card bg-gradient-to-br from-orange-50 to-orange-100 p-6 rounded-xl border border-orange-200">
      <!-- Icon -->
      <div class="w-12 h-12 rounded-lg flex items-center justify-center mb-4 mx-auto" style="background-color: #ff6400;">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      
      <!-- Content -->
      <h4 class="text-lg font-semibold mb-2 text-gray-900">Get Expert CMS SEO Help</h4>
      <p class="text-sm text-gray-600 mb-4">Our specialists know every platform inside and out.</p>
      
      <!-- CTA Button -->
      <a href="/contact" class="inline-flex items-center justify-center w-full px-4 py-2 bg-[#ff6400] text-white text-sm font-medium rounded-lg hover:bg-[#e55a00] transition-colors duration-200">
        Get Free Consultation
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>

  <!-- Mobile Accordion Layout -->
  <div class="lg:hidden space-y-4">
    {cmsCategories.map((category, index) => (
      <div class="cms-accordion">
        <button 
          class="accordion-toggle w-full flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors duration-200"
          data-target={`cms-accordion-${index}`}
        >
          <div class="text-left">
            <h3 class="font-semibold text-gray-900">{category.title}</h3>
            <p class="text-sm text-gray-600 mt-1">{category.subtitle}</p>
          </div>
          <svg class="w-5 h-5 text-gray-400 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        
        <div id={`cms-accordion-${index}`} class="hidden pl-4 pr-4 pb-4">
          <nav class="space-y-2">
            {category.services.map((service) => (
              <a 
                href={service.url}
                class="block py-2 text-base text-gray-700 hover:text-[#ff6400] transition-colors duration-200"
              >
                {service.name}
              </a>
            ))}
          </nav>
        </div>
      </div>
    ))}
  </div>
</div>

<script>
  // Enhanced mobile accordion functionality with improved hover behavior
  document.addEventListener('DOMContentLoaded', function() {
    const accordionToggles = document.querySelectorAll('.accordion-toggle');
    const megaMenuContainer = document.querySelector('.cms-mega-menu');
    const megaMenuOverlay = document.querySelector('.cms-mega-menu-overlay');
    
    // Mobile accordion functionality
    accordionToggles.forEach(toggle => {
      toggle.addEventListener('click', function(this: HTMLElement, e) {
        e.preventDefault();
        const targetId = this.getAttribute('data-target');
        if (targetId) {
          const targetContent = document.getElementById(targetId);
          const arrow = this.querySelector('svg');
          
          if (targetContent) {
            const isHidden = targetContent.classList.contains('hidden');
            
            // Close all other accordions first
            accordionToggles.forEach(otherToggle => {
              const otherId = otherToggle.getAttribute('data-target');
              if (otherId) {
                const otherContent = document.getElementById(otherId);
                const otherArrow = otherToggle.querySelector('svg');
                if (otherContent && otherId !== targetId) {
                  otherContent.classList.add('hidden');
                  if (otherArrow) {
                    otherArrow.classList.remove('rotate-180');
                  }
                }
              }
            });
            
            // Toggle current accordion
            if (isHidden) {
              targetContent.classList.remove('hidden');
              if (arrow) {
                arrow.classList.add('rotate-180');
              }
            } else {
              targetContent.classList.add('hidden');
              if (arrow) {
                arrow.classList.remove('rotate-180');
              }
            }
          }
        }
      });
    });

    // Enhanced hover behavior - proper show/hide functionality
    let hideTimeout: number;
    
    // Find the CMS SEO dropdown trigger in the navbar
    const cmsDropdownTrigger = document.querySelector('div.relative.group:nth-child(2)') || // Second dropdown in navbar
                              Array.from(document.querySelectorAll('button')).find(btn => 
                                btn.textContent?.trim().includes('CMS SEO')) ||
                              document.querySelector('.group button:contains("CMS SEO")');
    
    // Function to hide mega menu
    function hideMegaMenu() {
      if (megaMenuContainer) {
        megaMenuContainer.classList.add('invisible', 'opacity-0');
        megaMenuContainer.classList.remove('visible', 'opacity-100');
      }
      if (megaMenuOverlay) {
        megaMenuOverlay.classList.add('invisible', 'opacity-0');
        megaMenuOverlay.classList.remove('visible', 'opacity-100');
      }
    }
    
    // Function to show mega menu
    function showMegaMenu() {
      clearTimeout(hideTimeout);
      if (megaMenuContainer) {
        megaMenuContainer.classList.remove('invisible', 'opacity-0');
        megaMenuContainer.classList.add('visible', 'opacity-100');
      }
      if (megaMenuOverlay) {
        megaMenuOverlay.classList.remove('invisible', 'opacity-0');
        megaMenuOverlay.classList.add('visible', 'opacity-100');
      }
    }
    
    // Add hover events to the dropdown trigger (CMS SEO button)
    if (cmsDropdownTrigger) {
      cmsDropdownTrigger.addEventListener('mouseenter', function() {
        clearTimeout(hideTimeout);
        showMegaMenu();
      });
      
      cmsDropdownTrigger.addEventListener('mouseleave', function() {
        hideTimeout = setTimeout(hideMegaMenu, 200); // Delay to allow moving to menu
      });
    }
    
    // Add hover events to the mega menu container
    if (megaMenuContainer) {
      megaMenuContainer.addEventListener('mouseenter', function() {
        clearTimeout(hideTimeout);
      });
      
      megaMenuContainer.addEventListener('mouseleave', function() {
        hideMegaMenu(); // Immediate hide when leaving menu
      });
    }
    
    // Add hover events to the overlay
    if (megaMenuOverlay) {
      megaMenuOverlay.addEventListener('mouseleave', function() {
        hideMegaMenu(); // Immediate hide when leaving overlay
      });
    }
    
    // Hide mega menu when clicking outside or moving mouse away
    document.addEventListener('click', function(event) {
      if (megaMenuContainer && 
          !megaMenuContainer.contains(event.target as Node) && 
          !cmsDropdownTrigger?.contains(event.target as Node)) {
        hideMegaMenu();
      }
    });
    
    // Global mouse move listener to hide menu when mouse is far away
    document.addEventListener('mousemove', function(event) {
      if (megaMenuContainer && !megaMenuContainer.classList.contains('invisible')) {
        const menuRect = megaMenuContainer.getBoundingClientRect();
        const triggerRect = cmsDropdownTrigger?.getBoundingClientRect();
        
        // Check if mouse is far from both menu and trigger
        const mouseX = event.clientX;
        const mouseY = event.clientY;
        
        const isNearMenu = mouseX >= menuRect.left - 50 && 
                          mouseX <= menuRect.right + 50 && 
                          mouseY >= menuRect.top - 50 && 
                          mouseY <= menuRect.bottom + 50;
        
        const isNearTrigger = triggerRect && 
                             mouseX >= triggerRect.left - 20 && 
                             mouseX <= triggerRect.right + 20 && 
                             mouseY >= triggerRect.top - 20 && 
                             mouseY <= triggerRect.bottom + 20;
        
        if (!isNearMenu && !isNearTrigger) {
          hideMegaMenu();
        }
      }
    });
  });
</script>

<style>
  /* Ensure proper container width and centering */
  .w-\[1000px\] {
    width: 1000px;
  }
  
  /* Mobile responsive adjustments */
  @media (max-width: 640px) {
    .w-\[1000px\] {
      width: 100%;
      max-width: calc(100vw - 2rem);
    }
  }
  
  @media (min-width: 641px) and (max-width: 768px) {
    .w-\[1000px\] {
      width: 100%;
      max-width: calc(100vw - 3rem);
    }
  }
  
  /* Prevent text wrapping and ensure proper spacing */
  .whitespace-nowrap {
    white-space: nowrap;
  }
  
  /* Enhanced hover effects */
  a:hover {
    text-decoration-color: #ff6400;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }
  
  /* Smooth accordion animations */
  .accordion-toggle svg {
    transition: transform 0.2s ease-in-out;
  }
  
  .accordion-toggle svg.rotate-180 {
    transform: rotate(180deg);
  }
  
  /* Grid item spacing optimization */
  .grid-cols-4 > * {
    min-width: 0; /* Prevent flex overflow */
  }
  
  /* Ensure proper line height and spacing */
  .leading-6 {
    line-height: 1.5rem;
  }
  
  .py-1 {
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
  }
  
  /* Ensure mega menu stays above other content */
  .cms-mega-menu {
    position: fixed !important;
    z-index: 1000 !important;
  }
  
  /* Ensure overlay is properly positioned */
  .cms-mega-menu-overlay {
    position: fixed !important;
    z-index: 998 !important;
  }
</style>
