---
interface Props {
  title?: string;
}

const {
  title = "Trusted by Leading Businesses"
} = Astro.props;
---

<section class="bg-gray-100 py-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-gray-800 text-2xl md:text-3xl font-semibold text-center mb-12">
      {title}
    </h2>
    
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 items-center justify-items-center">
      <div class="flex items-center justify-center h-16">
        <div class="w-32 h-16 bg-white rounded-lg flex items-center justify-center shadow-sm">
          <span class="text-blue-900 font-bold text-sm">LK RETAIL</span>
        </div>
      </div>
      
      <div class="flex items-center justify-center h-16">
        <div class="w-32 h-16 bg-white rounded-lg flex items-center justify-center shadow-sm">
          <span class="text-green-600 font-bold text-sm">SRI TECH</span>
        </div>
      </div>
      
      <div class="flex items-center justify-center h-16">
        <div class="w-32 h-16 bg-white rounded-lg flex items-center justify-center shadow-sm">
          <span class="text-orange-600 font-bold text-sm">LANKA BIZ</span>
        </div>
      </div>
      
      <div class="flex items-center justify-center h-16">
        <div class="w-32 h-16 bg-white rounded-lg flex items-center justify-center shadow-sm">
          <span class="text-purple-600 font-bold text-sm">ISLAND SHOP</span>
        </div>
      </div>
      
      <div class="flex items-center justify-center h-16">
        <div class="w-32 h-16 bg-white rounded-lg flex items-center justify-center shadow-sm">
          <span class="text-red-600 font-bold text-sm">LK DIGITAL</span>
        </div>
      </div>
      
      <div class="flex items-center justify-center h-16">
        <div class="w-32 h-16 bg-white rounded-lg flex items-center justify-center shadow-sm">
          <span class="text-yellow-600 font-bold text-sm">SRI ONLINE</span>
        </div>
      </div>
    </div>
  </div>
</section>
