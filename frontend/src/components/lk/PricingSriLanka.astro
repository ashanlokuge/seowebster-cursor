---
interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Simple, Transparent SEO Pricing for Sri Lanka",
  subtitle = "Choose the plan that fits your Sri Lankan business growth stage. No hidden fees â€” just results."
} = Astro.props;

const pricingPlans = [
  {
    name: "Starter Plan LK",
    price: "LKR 49,000",
    period: "/month",
    description: "Perfect for small Sri Lankan businesses",
    features: [
      "10 Keywords Optimized (LK focused)",
      "Monthly SEO Audit",
      "Basic Local SEO Sri Lanka",
      "Email Support in English"
    ],
    buttonText: "Get Started",
    buttonLink: "/lk/contact",
    popular: false,
    gradient: "from-blue-500 to-cyan-500"
  },
  {
    name: "Growth Plan LK",
    price: "LKR 99,000",
    period: "/month",
    description: "Designed for growing Sri Lankan businesses",
    features: [
      "25 Sri Lankan Keywords Targeted",
      "Technical SEO Fixes",
      "Local Citations & GMB LK",
      "Monthly Reporting Call"
    ],
    buttonText: "Start Free Audit",
    buttonLink: "/lk/contact",
    popular: true,
    gradient: "from-orange-500 to-red-500"
  },
  {
    name: "Enterprise Plan LK",
    price: "Custom Quote",
    period: "",
    description: "Scalable solutions for large Sri Lankan enterprises",
    features: [
      "Unlimited LK Keywords",
      "Dedicated Sri Lankan SEO Manager",
      "Multi-Language Optimization",
      "Full Technical Audit & Support"
    ],
    buttonText: "Contact Sales",
    buttonLink: "/lk/contact",
    popular: false,
    gradient: "from-purple-500 to-pink-500"
  }
];
---

<section class="relative bg-gradient-to-br from-gray-50 to-white py-16 lg:py-24 overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 z-0">
    <!-- Floating geometric shapes with Sri Lankan colors -->
    <div class="absolute top-10 left-10 w-20 h-20 bg-gradient-to-br from-orange-100 to-orange-200 rounded-full opacity-20 animate-float"></div>
    <div class="absolute top-20 right-20 w-16 h-16 bg-gradient-to-br from-green-100 to-green-200 rounded-full opacity-20 animate-float-delayed"></div>
    <div class="absolute bottom-20 left-20 w-12 h-12 bg-gradient-to-br from-yellow-100 to-yellow-200 rounded-full opacity-20 animate-float"></div>
    <div class="absolute bottom-10 right-10 w-24 h-24 bg-gradient-to-br from-blue-100 to-blue-200 rounded-full opacity-20 animate-float-delayed"></div>
    
    <!-- Grid pattern overlay -->
    <div class="absolute inset-0 bg-gray-100 opacity-30"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12 lg:mb-16">
      <h2 class="text-3xl lg:text-4xl xl:text-5xl font-bold text-gray-900 mb-4 leading-tight">
        {title}
      </h2>
      <p class="text-lg lg:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 lg:gap-6 xl:gap-8">
      {pricingPlans.map((plan) => (
        <div class={`relative group ${plan.popular ? 'lg:scale-105 md:col-span-2 lg:col-span-1' : ''}`}>
          {/* Popular Badge */}
          {plan.popular && (
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 z-20">
              <div class="bg-gradient-to-r from-orange-500 to-red-500 text-white px-4 py-2 rounded-full text-sm font-semibold shadow-lg">
                Most Popular for LK
              </div>
            </div>
          )}

          {/* Card */}
          <div class={`relative h-full bg-white rounded-2xl p-8 lg:p-10 shadow-lg hover:shadow-2xl transition-all duration-500 border-2 pricing-card-hover ${
            plan.popular 
              ? 'border-orange-200 shadow-orange-100/50' 
              : 'border-gray-100 hover:border-gray-200'
          } group-hover:-translate-y-2`}>
            
            {/* Gradient overlay on hover */}
            <div class={`absolute inset-0 bg-gradient-to-br ${plan.gradient} opacity-0 group-hover:opacity-5 rounded-2xl transition-opacity duration-500`}></div>
            
            <div class="relative z-10">
              <!-- Plan Name -->
              <div class="text-center mb-6">
                <h3 class="text-2xl font-bold text-gray-900 mb-2">
                  {plan.name}
                </h3>
                <p class="text-gray-600 text-sm">
                  {plan.description}
                </p>
              </div>

              <!-- Price -->
              <div class="text-center mb-8">
                <div class="flex items-baseline justify-center">
                  <span class="text-4xl lg:text-5xl font-bold text-gray-900">
                    {plan.price}
                  </span>
                  {plan.period && (
                    <span class="text-lg text-gray-500 ml-1">
                      {plan.period}
                    </span>
                  )}
                </div>
                {plan.price.includes('LKR') && (
                  <div class="text-sm text-gray-500 mt-1">
                    Approx. ${Math.round(parseInt(plan.price.replace(/[^\d]/g, '')) / 300)}
                  </div>
                )}
              </div>

              <!-- Features -->
              <div class="space-y-4 mb-8">
                {plan.features.map((feature) => (
                  <div class="flex items-start group/feature">
                    <div class="flex-shrink-0 w-5 h-5 bg-gradient-to-br from-green-400 to-green-500 rounded-full flex items-center justify-center mr-3 mt-0.5 transition-transform duration-300 group-hover/feature:scale-110">
                      <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <span class="text-gray-700 text-sm lg:text-base transition-colors duration-300 group-hover/feature:text-gray-900">
                      {feature}
                    </span>
                  </div>
                ))}
              </div>

              <!-- CTA Button -->
              <div class="text-center">
                <a 
                  href={plan.buttonLink}
                  class={`inline-flex items-center justify-center w-full px-6 py-4 text-base font-semibold text-white rounded-xl transition-all duration-300 transform hover:scale-105 ${
                    plan.popular
                      ? 'bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 shadow-lg hover:shadow-xl'
                      : 'bg-gradient-to-r from-gray-800 to-gray-900 hover:from-gray-900 hover:to-black shadow-md hover:shadow-lg'
                  }`}
                >
                  {plan.buttonText}
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>

            {/* Decorative elements */}
            <div class="absolute top-4 right-4 w-8 h-8 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full opacity-50"></div>
            <div class="absolute bottom-4 left-4 w-6 h-6 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full opacity-50"></div>
          </div>
        </div>
      ))}
    </div>

    <!-- Additional Info -->
    <div class="text-center mt-12 lg:mt-16">
      <div class="bg-white rounded-2xl p-6 lg:p-8 shadow-lg border border-gray-100 max-w-4xl mx-auto hover:shadow-xl transition-shadow duration-300">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
          <div class="flex items-center justify-center">
            <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-green-500 rounded-full flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900">30-Day Guarantee</h4>
              <p class="text-sm text-gray-600">Full refund for LK businesses</p>
            </div>
          </div>
          
          <div class="flex items-center justify-center">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-500 rounded-full flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900">Fast LK Results</h4>
              <p class="text-sm text-gray-600">See improvements in 30 days</p>
            </div>
          </div>
          
          <div class="flex items-center justify-center">
            <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-purple-500 rounded-full flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900">Sri Lankan Experts</h4>
              <p class="text-sm text-gray-600">Dedicated LK SEO specialists</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
