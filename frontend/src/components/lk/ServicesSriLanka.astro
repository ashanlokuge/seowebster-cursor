---

<section class="bg-gradient-to-b from-white to-slate-50/30 py-20 lg:py-28">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-50 text-[#F57A18] mb-4">
        Our Services
      </span>
      <h2 class="text-3xl lg:text-4xl xl:text-5xl font-bold text-gray-900 mb-4 leading-tight">
        Comprehensive SEO Solutions
      </h2>
      <p class="text-lg lg:text-xl text-gray-600 max-w-3xl mx-auto">
        From technical optimization to content strategy, we offer everything you need to dominate search rankings in the local market.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 lg:gap-8">
      {services.map((service) => (
        <div class="group bg-white rounded-xl p-6 shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-[#F57A18]/20 text-center">
          <!-- Icon -->
          <div class="w-12 h-12 bg-gradient-to-br from-[#F57A18] to-[#E06A15] rounded-lg flex items-center justify-center text-white mb-5 mx-auto group-hover:scale-110 transition-transform duration-300">
            <Fragment set:html={service.icon} />
          </div>
          
          <!-- Content -->
          <div>
            <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-[#F57A18] transition-colors duration-300">
              {service.title}
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed">
              {service.description}
            </p>
          </div>

          <!-- Hover Arrow -->
          <div class="mt-4 flex items-center justify-center text-[#F57A18] opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <span class="text-sm font-medium">Learn more</span>
            <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA Section -->
    <div class="text-center mt-16">
      <div class="bg-gradient-to-r from-[#F57A18] to-[#E06A15] rounded-2xl p-10 lg:p-16 shadow-xl relative overflow-hidden">
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-10">
          <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
            <defs>
              <pattern id="grid-lk" width="10" height="10" patternUnits="userSpaceOnUse">
                <circle cx="5" cy="5" r="1" fill="currentColor"/>
              </pattern>
            </defs>
            <rect width="100" height="100" fill="url(#grid-lk)"/>
          </svg>
        </div>

        <div class="relative z-10">
          <h3 class="text-3xl lg:text-4xl font-bold text-white mb-6">
            Ready to Dominate Search Rankings?
          </h3>
          <p class="text-white text-opacity-90 text-lg mb-8 max-w-3xl mx-auto">
            Let's create a customized SEO strategy that drives real results for your business.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/lk/contact" 
              class="inline-flex items-center justify-center px-8 py-4 bg-white text-[#F57A18] font-semibold rounded-xl hover:bg-gray-50 transform transition-all duration-300 hover:scale-105 shadow-lg"
            >
              Get Free SEO Audit
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
            <a 
              href="/lk/seo-services" 
              class="inline-flex items-center justify-center px-8 py-4 border-2 border-white text-white font-semibold rounded-xl hover:bg-white hover:text-[#F57A18] transform transition-all duration-300"
            >
              View Service Details
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Smooth transitions */
  .group {
    transform: translateY(0);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .group:hover {
    transform: translateY(-4px);
  }

  /* Ensure smooth transitions for all interactive elements */
  .group * {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Background pattern animation */
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .pattern {
    animation: float 6s ease-in-out infinite;
  }
</style>
