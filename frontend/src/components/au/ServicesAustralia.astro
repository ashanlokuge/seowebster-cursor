---

<section class="bg-gradient-to-b from-white to-slate-50/30 py-20 lg:py-28">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-50 text-[#F57A18] mb-4">
        Our Services
      </span>
      <h2 class="text-3xl lg:text-4xl xl:text-5xl font-bold text-gray-900 mb-4 leading-tight">
        Comprehensive SEO Solutions for Australia
      </h2>
      <p class="text-lg lg:text-xl text-gray-600 max-w-3xl mx-auto">
        From technical optimization to content strategy, we offer everything you need to dominate search rankings in the Australian market.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 lg:gap-8">
      {services.map((service) => (
        <div class="group bg-white rounded-xl p-6 shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-[#F57A18]/20 text-center">
          <div class="w-12 h-12 bg-gradient-to-br from-[#F57A18] to-[#E06A15] rounded-lg flex items-center justify-center text-white mb-5 mx-auto group-hover:scale-110 transition-transform duration-300">
            <Fragment set:html={service.icon} />
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-[#F57A18] transition-colors duration-300">
            {service.title}
          </h3>
          <p class="text-gray-600 text-sm leading-relaxed">
            {service.description}
          </p>
        </div>
      ))}
    </div>

    <!-- Australia-specific CTA Section -->
    <div class="bg-gradient-to-r from-green-600 via-blue-600 to-yellow-500 rounded-3xl p-8 lg:p-12 mt-16 lg:mt-20 text-center relative overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <svg class="absolute inset-0 w-full h-full" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <pattern id="grid-au" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
              <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="1"/>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#grid-au)"/>
        </svg>
      </div>

      <div class="relative z-10">
        <h3 class="text-3xl lg:text-4xl font-bold text-white mb-6">
          Ready to Dominate Australian Search Rankings?
        </h3>
        <p class="text-white text-opacity-90 text-lg mb-8 max-w-3xl mx-auto">
          Let's create a customized SEO strategy that drives real results for your Australian business.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/au/contact" 
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-[#F57A18] font-semibold rounded-xl hover:bg-gray-50 transform transition-all duration-300 hover:scale-105 shadow-lg"
          >
            Get Free SEO Audit
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a 
            href="/au/seo-services" 
            class="inline-flex items-center justify-center px-8 py-4 bg-transparent border-2 border-white text-white font-semibold rounded-xl hover:bg-white hover:text-green-600 transform transition-all duration-300"
          >
            View All Services
            <span class="ml-2">ðŸ‡¦ðŸ‡º</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
