---
interface Props {
  title?: string;
  description?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  title = "Drive More Traffic & Revenue with Data-Driven SEO",
  description = "Transform your Australian business online presence with our expert SEO services. Get higher rankings, more organic traffic, and better ROI with our proven strategies designed for the Australian market.",
  ctaText = "Get Free SEO Audit",
  ctaLink = "/au/contact"
} = Astro.props;
---

<section class="relative overflow-hidden bg-white">
  <!-- Background Pattern with Australian Colors -->
  <div class="absolute inset-0 z-0 opacity-5">
    <svg class="absolute inset-0 w-full h-full" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="hero-pattern-au" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
          <rect x="0" y="0" width="2" height="2" fill="#00843D"/> <!-- Australian Green -->
          <rect x="20" y="20" width="2" height="2" fill="#FFD100"/> <!-- Australian Gold -->
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#hero-pattern-au)"/>
    </svg>
  </div>

  <!-- Floating Elements - Australian themed -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Top Left -->
    <div class="absolute -top-4 -left-4 w-24 h-24 bg-gradient-to-br from-green-400/20 to-yellow-400/20 rounded-full animate-pulse"></div>
    <!-- Top Right -->
    <div class="absolute top-20 right-8 w-16 h-16 bg-gradient-to-br from-blue-400/20 to-green-400/20 rounded-lg rotate-45 animate-bounce delay-1000"></div>
    <!-- Bottom Left -->
    <div class="absolute bottom-16 left-12 w-20 h-20 bg-gradient-to-br from-yellow-400/20 to-red-400/20 rounded-full animate-pulse delay-500"></div>
    <!-- Bottom Right -->
    <div class="absolute -bottom-8 -right-8 w-32 h-32 bg-gradient-to-br from-green-400/20 to-blue-400/20 rounded-lg rotate-12 animate-bounce delay-700"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-center">
      <!-- Left Column - Content -->
      <div class="lg:col-span-6 text-center lg:text-left order-2 lg:order-1">
        <div class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-gradient-to-r from-green-50 to-yellow-50 text-green-800 mb-6 border border-green-200">
          <span class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></span>
          Australia's Trusted SEO Experts
        </div>
        
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold tracking-tight text-gray-900 mb-6 leading-tight">
          {title}
        </h1>
        
        <p class="text-lg lg:text-xl text-gray-600 mb-8 leading-relaxed max-w-2xl mx-auto lg:mx-0">
          {description}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-8">
          <a 
            href={ctaLink}
            class="inline-flex items-center justify-center px-8 py-4 rounded-xl text-lg font-semibold text-white bg-gradient-to-r from-green-600 via-blue-600 to-yellow-500 hover:from-green-700 hover:via-blue-700 hover:to-yellow-600 transform transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
          >
            {ctaText}
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a 
            href="/au/seo-services"
            class="inline-flex items-center justify-center px-8 py-4 rounded-xl text-lg font-semibold text-gray-900 bg-white border-2 border-gray-900 hover:bg-gray-900 hover:text-white transform transition-all duration-300 shadow-md hover:shadow-lg"
          >
            View Services
          </a>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-3 gap-6 max-w-md mx-auto lg:mx-0">
          <div class="text-center lg:text-left">
            <div class="text-2xl lg:text-3xl font-bold text-green-600">250+</div>
            <div class="text-sm text-gray-600">Australian Clients</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-2xl lg:text-3xl font-bold text-blue-600">98%</div>
            <div class="text-sm text-gray-600">Success Rate</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-2xl lg:text-3xl font-bold text-yellow-600">5+ Years</div>
            <div class="text-sm text-gray-600">AU Experience</div>
          </div>
        </div>
      </div>

      <!-- Right Column - Dashboard -->
      <div class="lg:col-span-6 flex justify-center order-1 lg:order-2">
        <div class="relative w-full max-w-lg">
          <!-- Main Dashboard Container -->
          <div class="bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden transform hover:scale-105 transition-all duration-500">
            <!-- Dashboard Header -->
            <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-200">
              <div class="flex items-center space-x-2">
                <div class="w-2 h-2 bg-red-400 rounded-full"></div>
                <div class="w-2 h-2 bg-yellow-400 rounded-full"></div>
                <div class="w-2 h-2 bg-green-400 rounded-full"></div>
              </div>
              <div class="ml-4 text-xs font-medium text-gray-600">SEO Analytics Dashboard</div>
            </div>

            <!-- Main Content Area -->
            <div class="absolute top-12 left-0 right-0 bottom-0 p-4">
              
              <!-- Top Stats Row -->
              <div class="grid grid-cols-3 gap-3 mb-4">
                <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-3 text-center">
                  <div class="text-lg font-bold text-blue-600">47.2K</div>
                  <div class="text-xs text-blue-500">Monthly Traffic</div>
                </div>
                <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-3 text-center">
                  <div class="text-lg font-bold text-green-600">1,247</div>
                  <div class="text-xs text-green-500">Keywords</div>
                </div>
                <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 rounded-lg p-3 text-center">
                  <div class="text-lg font-bold text-yellow-600">4.8%</div>
                  <div class="text-xs text-yellow-500">Conversion</div>
                </div>
              </div>

              <!-- Main Chart Area -->
              <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100 mb-3 h-36">
                <div class="flex items-center justify-between mb-3">
                  <h3 class="text-xs font-semibold text-gray-900">Traffic Growth</h3>
                  <div class="flex items-center space-x-2">
                    <div class="flex items-center space-x-1">
                      <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                      <span class="text-[8px] text-gray-600">Organic AU</span>
                    </div>
                    <div class="flex items-center space-x-1">
                      <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                      <span class="text-[8px] text-gray-600">Local</span>
                    </div>
                  </div>
                </div>
                
                <!-- Simple Chart Representation -->
                <div class="relative h-20">
                  <svg class="w-full h-full" viewBox="0 0 300 80">
                    <!-- Grid Lines -->
                    <defs>
                      <pattern id="grid" width="30" height="20" patternUnits="userSpaceOnUse">
                        <path d="M 30 0 L 0 0 0 20" fill="none" stroke="#f1f5f9" stroke-width="1"/>
                      </pattern>
                    </defs>
                    <rect width="100%" height="100%" fill="url(#grid)" />
                    
                    <!-- Chart Lines -->
                    <polyline 
                      fill="none" 
                      stroke="#3b82f6" 
                      stroke-width="2" 
                      points="10,60 50,45 90,50 130,35 170,30 210,25 250,20 290,15"
                    />
                    <polyline 
                      fill="none" 
                      stroke="#10b981" 
                      stroke-width="2" 
                      points="10,70 50,65 90,55 130,50 170,45 210,35 250,30 290,25"
                    />
                  </svg>
                </div>
              </div>

              <!-- Bottom Stats -->
              <div class="grid grid-cols-2 gap-3">
                <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-lg p-3 text-center">
                  <div class="text-xl font-bold text-gray-800">94/100</div>
                  <div class="text-xs text-gray-600">SEO Score</div>
                </div>
                <div class="bg-gradient-to-br from-green-50 to-emerald-100 rounded-lg p-3 text-center">
                  <div class="text-xl font-bold text-green-600">AU #1</div>
                  <div class="text-xs text-gray-600">Ranking</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating Badge -->
          <div class="absolute -bottom-4 -right-4 bg-gradient-to-r from-green-500 to-yellow-500 text-white px-4 py-2 rounded-full text-sm font-semibold shadow-lg animate-bounce">
            ðŸ‡¦ðŸ‡º Made for Australia
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
