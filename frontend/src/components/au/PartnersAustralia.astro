---
interface Props {
  title?: string;
}

const {
  title = "Trusted by Leading Australian Businesses"
} = Astro.props;

const partners = [
  { name: "AU RETAIL", color: "text-blue-900" },
  { name: "AUSSIE TECH", color: "text-green-600" },
  { name: "SYDNEY BIZ", color: "text-orange-600" },
  { name: "MEL SHOP", color: "text-purple-600" },
  { name: "AU DIGITAL", color: "text-red-600" },
  { name: "BRISBANE CO", color: "text-yellow-600" }
];
---

<section class="bg-gray-100 py-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-gray-800 text-2xl md:text-3xl font-semibold text-center mb-12">
      {title}
    </h2>
    
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 items-center justify-items-center">
      {partners.map((partner) => (
        <div class="w-32 h-16 bg-white rounded-lg flex items-center justify-center shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
          <span class={`${partner.color} font-bold text-sm`}>{partner.name}</span>
        </div>
      ))}
    </div>

    <!-- Australian Market Stats -->
    <div class="mt-12 text-center">
      <div class="bg-gradient-to-r from-green-50 to-yellow-50 rounded-xl p-6 border border-green-100">
        <p class="text-gray-600 text-sm mb-4">Serving businesses across all major Australian cities</p>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
          <div>
            <div class="text-2xl font-bold text-green-600">Sydney</div>
            <div class="text-xs text-gray-600">NSW</div>
          </div>
          <div>
            <div class="text-2xl font-bold text-blue-600">Melbourne</div>
            <div class="text-xs text-gray-600">VIC</div>
          </div>
          <div>
            <div class="text-2xl font-bold text-orange-600">Brisbane</div>
            <div class="text-xs text-gray-600">QLD</div>
          </div>
          <div>
            <div class="text-2xl font-bold text-purple-600">Perth</div>
            <div class="text-xs text-gray-600">WA</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
