---
const testimonials = [
  {
    quote: "SEOWebster transformed our online presence in Australia. Our Sydney-based law firm now ranks #1 for competitive keywords and we've seen a 180% increase in qualified leads.",
    author: "James Mitchell",
    position: "Managing Partner",
    company: "Mitchell & Associates Law",
    location: "Sydney, NSW",
    rating: 5,
    results: "180% increase in leads",
    avatar: "JM"
  },
  {
    quote: "The team's understanding of the Australian e-commerce market is exceptional. Our Melbourne-based store saw organic traffic grow by 240% in just 6 months.",
    author: "Sarah Thompson",
    position: "E-commerce Director",
    company: "Aussie Home Goods",
    location: "Melbourne, VIC",
    rating: 5,
    results: "240% traffic growth",
    avatar: "ST"
  },
  {
    quote: "Outstanding results for our Brisbane restaurant chain. Local SEO optimization helped us dominate search results across Queensland. ROI has been incredible.",
    author: "Michael Chen",
    position: "Marketing Manager",
    company: "Urban Eats Group",
    location: "Brisbane, QLD",
    rating: 5,
    results: "Dominating QLD search",
    avatar: "MC"
  },
  {
    quote: "Professional, reliable, and results-driven. Our Perth-based tech startup achieved first-page rankings for all target keywords within 4 months.",
    author: "Emma Wilson",
    position: "CEO",
    company: "TechFlow Australia",
    location: "Perth, WA",
    rating: 5,
    results: "First page in 4 months",
    avatar: "EW"
  }
];
---

<section class="bg-gradient-to-b from-gray-50 to-white py-20 lg:py-28">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-50 text-green-600 mb-4">
        Australian Success Stories
      </span>
      <h2 class="text-3xl lg:text-4xl xl:text-5xl font-bold text-gray-900 mb-4 leading-tight">
        What Australian Businesses Say
      </h2>
      <p class="text-lg lg:text-xl text-gray-600 max-w-3xl mx-auto">
        Real results from real Australian businesses across Sydney, Melbourne, Brisbane, and Perth.
      </p>
    </div>

    <!-- Testimonials Slider -->
    <div class="relative">
      <div id="testimonials-container-au" class="overflow-hidden">
        <div id="testimonials-track-au" class="flex transition-transform duration-500 ease-in-out">
          {testimonials.map((testimonial, index) => (
            <div class="w-full flex-shrink-0 px-4">
              <div class="bg-white rounded-2xl p-8 lg:p-10 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 mx-auto max-w-4xl">
                <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-center">
                  <!-- Content -->
                  <div class="lg:col-span-8">
                    <!-- Rating -->
                    <div class="flex items-center mb-6">
                      {Array.from({ length: testimonial.rating }, (_, i) => (
                        <svg key={i} class="w-5 h-5 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                      ))}
                      <span class="ml-2 text-sm font-medium text-gray-600">{testimonial.rating}.0</span>
                    </div>

                    <!-- Quote -->
                    <blockquote class="text-lg lg:text-xl text-gray-700 leading-relaxed mb-6 italic">
                      "{testimonial.quote}"
                    </blockquote>

                    <!-- Results Badge -->
                    <div class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-green-50 text-green-700 border border-green-200 mb-6">
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4"></path>
                      </svg>
                      {testimonial.results}
                    </div>
                  </div>

                  <!-- Author Info -->
                  <div class="lg:col-span-4 text-center lg:text-left">
                    <div class="flex items-center justify-center lg:justify-start mb-4">
                      <div class="w-16 h-16 bg-gradient-to-br from-green-400 to-blue-500 rounded-full flex items-center justify-center text-white font-bold text-lg mr-4">
                        {testimonial.avatar}
                      </div>
                      <div>
                        <div class="font-bold text-gray-900 text-lg">{testimonial.author}</div>
                        <div class="text-gray-600 text-sm">{testimonial.position}</div>
                        <div class="text-green-600 text-sm font-medium">{testimonial.company}</div>
                        <div class="text-gray-500 text-xs flex items-center justify-center lg:justify-start mt-1">
                          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          </svg>
                          {testimonial.location}
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Navigation Buttons -->
      <button 
        id="prev-btn-au" 
        class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-white rounded-full p-3 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-green-200 group z-10"
      >
        <svg class="w-6 h-6 text-gray-600 group-hover:text-green-600 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>
      
      <button 
        id="next-btn-au" 
        class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-white rounded-full p-3 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-green-200 group z-10"
      >
        <svg class="w-6 h-6 text-gray-600 group-hover:text-green-600 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>

    <!-- Indicators -->
    <div class="flex justify-center mt-8 space-x-2">
      {testimonials.map((_, index) => (
        <button 
          class={`w-3 h-3 rounded-full transition-all duration-300 testimonial-indicator-au ${
            index === 0 ? 'bg-green-500' : 'bg-gray-300 hover:bg-gray-400'
          }`}
          data-index={index}
        ></button>
      ))}
    </div>
  </div>
</section>

<script>
  // Australian Testimonials Slider
  document.addEventListener('DOMContentLoaded', function() {
    const track = document.getElementById('testimonials-track-au');
    const prevBtn = document.getElementById('prev-btn-au');
    const nextBtn = document.getElementById('next-btn-au');
    const indicators = document.querySelectorAll('.testimonial-indicator-au');
    
    let currentIndex = 0;
    const totalTestimonials = 4; // Number of Australian testimonials
    
    function updateSlider() {
      const translateX = -currentIndex * 100;
      track.style.transform = `translateX(${translateX}%)`;
      
      // Update indicators
      indicators.forEach((indicator, index) => {
        if (index === currentIndex) {
          indicator.classList.remove('bg-gray-300');
          indicator.classList.add('bg-green-500');
        } else {
          indicator.classList.remove('bg-green-500');
          indicator.classList.add('bg-gray-300');
        }
      });
    }
    
    nextBtn?.addEventListener('click', () => {
      currentIndex = (currentIndex + 1) % totalTestimonials;
      updateSlider();
    });
    
    prevBtn?.addEventListener('click', () => {
      currentIndex = (currentIndex - 1 + totalTestimonials) % totalTestimonials;
      updateSlider();
    });
    
    // Indicator clicks
    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => {
        currentIndex = index;
        updateSlider();
      });
    });
    
    // Auto-play
    setInterval(() => {
      currentIndex = (currentIndex + 1) % totalTestimonials;
      updateSlider();
    }, 6000);
  });
</script>
