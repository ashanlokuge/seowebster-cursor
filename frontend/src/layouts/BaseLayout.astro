---
import Navbar from '../components/navigation/Navbar.astro';
import Footer from '../components/layout/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  frontmatter?: {
    title: string;
    description: string;
  };
}

const { title = '', description = '', ogImage, frontmatter } = Astro.props;
const pageTitle = frontmatter?.title || title;
const pageDescription = frontmatter?.description || description;
const pageOgImage = ogImage || '/images/seowebster-logo.svg';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content={pageDescription} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle} | SEOWebster</title>
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/png" href="/favicon.png" />
  
  <!-- Meta tags for SEO -->
  <meta name="theme-color" content="#FF6B00" />
  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={pageDescription} />
  <meta property="og:type" content="website" />
  <meta property="og:image" content={pageOgImage} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={pageTitle} />
  <meta name="twitter:description" content={pageDescription} />
  
  <!-- Custom Animations for Pricing Section -->
  <style>
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }
    
    @keyframes float-delayed {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-8px); }
    }
    
    .animate-float {
      animation: float 3s ease-in-out infinite;
    }
    
    .animate-float-delayed {
      animation: float-delayed 3s ease-in-out infinite;
      animation-delay: 1.5s;
    }
    
    /* Smooth hover transitions for pricing cards */
    .pricing-card-hover {
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .pricing-card-hover:hover {
      transform: translateY(-8px);
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }
    
    /* Gradient text animation */
    .gradient-text {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    /* Testimonial card animations */
    .testimonial-card {
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .testimonial-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 20px 40px -12px rgba(0, 0, 0, 0.15);
    }
    
    /* Star rating animation */
    .star-rating svg {
      transition: transform 0.2s ease-in-out;
    }
    
    .star-rating:hover svg {
      transform: scale(1.1);
    }
    
    /* Quote mark animation */
    .quote-mark {
      animation: fadeInUp 0.6s ease-out;
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>
<body class="bg-white text-gray-900">
  <Navbar />
  <main>
    <slot />
  </main>
  <Footer />
</body>
</html> 