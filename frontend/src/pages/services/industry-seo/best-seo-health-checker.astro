  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('seo-checker-form');
      const loadingState = document.getElementById('loading-state');
      const resultsSection = document.getElementById('results-section');
      const checkSeoBtn = document.getElementById('check-seo-btn');
      
      const sampleSeoData = {
        score: 78,
        title: 'Fair SEO Health',
        description: 'Your website has moderate SEO issues that need attention',
        issues: [
          {
            type: 'critical',
            title: 'Missing Meta Description',
            description: 'Your homepage lacks a meta description, which hurts click-through rates from search results.'
          },
          {
            type: 'high',
            title: 'Slow Page Speed',
            description: 'Your page takes 4.2 seconds to load, which is above the recommended 3-second threshold.'
          }
        ],
        recommendations: [
          {
            priority: 'Immediate',
            title: 'Add Meta Description',
            description: 'Write a compelling 150-160 character description for your homepage.'
          },
          {
            priority: 'High',
            title: 'Optimize Images',
            description: 'Compress images and add descriptive alt text to improve page speed and accessibility.'
          }
        ]
      };

      form.addEventListener('submit', function(e) {
        e.preventDefault();
        const url = document.getElementById('website-url').value;
        
        if (!url) {
          alert('Please enter a valid website URL');
          return;
        }

        loadingState.classList.remove('hidden');
        resultsSection.classList.add('hidden');
        checkSeoBtn.disabled = true;
        checkSeoBtn.textContent = 'Analyzing...';

        setTimeout(function() {
          displayResults(sampleSeoData);
          loadingState.classList.add('hidden');
          resultsSection.classList.remove('hidden');
          checkSeoBtn.disabled = false;
          checkSeoBtn.textContent = 'Analyze My Website Now';
        }, 3000);
      });

      function displayResults(data) {
        document.getElementById('seo-score').textContent = data.score;
        document.getElementById('score-title').textContent = data.title;
        document.getElementById('score-description').textContent = data.description;

        const issuesList = document.getElementById('issues-list');
        issuesList.innerHTML = data.issues.map(function(issue) {
          return '<div class="flex items-start space-x-3 p-3 rounded-lg bg-red-50"><div class="flex-shrink-0 w-2 h-2 rounded-full mt-2 bg-red-500"></div><div><h5 class="font-medium text-gray-900">' + issue.title + '</h5><p class="text-sm text-gray-600">' + issue.description + '</p></div></div>';
        }).join('');

        const recommendationsList = document.getElementById('recommendations-list');
        recommendationsList.innerHTML = data.recommendations.map(function(rec) {
          return '<div class="flex items-start space-x-3 p-3 rounded-lg bg-blue-50"><div class="flex-shrink-0"><span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">' + rec.priority + '</span></div><div><h5 class="font-medium text-gray-900">' + rec.title + '</h5><p class="text-sm text-gray-600">' + rec.description + '</p></div></div>';
        }).join('');
      }

      document.getElementById('download-report').addEventListener('click', function() {
        const url = document.getElementById('website-url').value;
        const score = document.getElementById('seo-score').textContent;
        const report = 'SEO Health Check Report\nWebsite: ' + url + '\nScore: ' + score + '/100\nDate: ' + new Date().toLocaleDateString();
        const blob = new Blob([report], { type: 'text/plain' });
        const url2 = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url2;
        a.download = 'seo-health-report-' + url.replace(/[^a-zA-Z0-9]/g, '-') + '.txt';
        a.click();
        window.URL.revokeObjectURL(url2);
      });

      // FAQ Accordion Functionality
      const faqToggles = document.querySelectorAll('.faq-toggle');
      
      faqToggles.forEach((toggle) => {
        toggle.addEventListener('click', (event) => {
          const target = event.currentTarget;
          const content = target.nextElementSibling;
          const icon = target.querySelector('svg');
          const isExpanded = target.getAttribute('aria-expanded') === 'true';
          
          // Toggle the current FAQ item
          if (isExpanded) {
            // Collapse
            content.classList.add('hidden');
            target.setAttribute('aria-expanded', 'false');
            icon.style.transform = 'rotate(0deg)';
          } else {
            // Expand
            content.classList.remove('hidden');
            target.setAttribute('aria-expanded', 'true');
            icon.style.transform = 'rotate(180deg)';
          }
        });
      });

      // Lead form functionality
      const leadForm = document.getElementById('lead-form');
      if (leadForm) {
        leadForm.addEventListener('submit', function(e) {
          e.preventDefault();
          const name = document.getElementById('lead-name').value;
          const email = document.getElementById('lead-email').value;
          
          if (name && email) {
            alert('Thank you! Your detailed PDF report will be emailed to you shortly.');
            leadForm.reset();
          }
        });
      }
    });
  </script>
