---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Contact SEO Experts Sri Lanka | Get Free Consultation | SEOWebster LK"
  description="Contact our SEO experts in Sri Lanka for a free consultation. Get personalized SEO strategies for your business in the LK market."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-600">
    <div class="absolute inset-0 opacity-10">
      <svg class="absolute inset-0 w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="contact-pattern" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
            <rect x="0" y="0" width="2" height="2" fill="currentColor"/>
            <rect x="20" y="20" width="2" height="2" fill="currentColor"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#contact-pattern)"/>
      </svg>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-28">
      <div class="text-center">
        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-white/20 text-white mb-6">
          ðŸ‡±ðŸ‡° Get in Touch - Sri Lanka
        </span>
        <h1 class="text-4xl lg:text-6xl font-bold text-white mb-6 leading-tight">
          Let's Grow Your Business<br>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-300 to-orange-300">
            in Sri Lanka
          </span>
        </h1>
        <p class="text-xl lg:text-2xl text-white/90 mb-8 max-w-3xl mx-auto leading-relaxed">
          Ready to dominate search results in Sri Lanka? Get a free SEO consultation tailored for the LK market.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <div class="mb-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Get Your Free SEO Consultation</h2>
            <p class="text-gray-600">Fill out the form below and our Sri Lankan SEO experts will get back to you within 24 hours.</p>
          </div>

          <form class="space-y-6" action="#" method="POST" id="sri-lanka-contact-form">
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Full Name *</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200"
                placeholder="Enter your full name"
              >
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200"
                placeholder="your.email@example.com"
              >
            </div>

            <!-- Phone -->
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
              <div class="flex">
                <span class="inline-flex items-center px-3 py-3 border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm rounded-l-lg">
                  +94
                </span>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  class="flex-1 px-4 py-3 border border-gray-300 rounded-r-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200"
                  placeholder="77 123 4567"
                >
              </div>
            </div>

            <!-- Company -->
            <div>
              <label for="company" class="block text-sm font-medium text-gray-700 mb-2">Company Name</label>
              <input 
                type="text" 
                id="company" 
                name="company"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200"
                placeholder="Your company name"
              >
            </div>

            <!-- Website -->
            <div>
              <label for="website" class="block text-sm font-medium text-gray-700 mb-2">Website URL</label>
              <input 
                type="url" 
                id="website" 
                name="website"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200"
                placeholder="https://yourwebsite.lk"
              >
            </div>

            <!-- Business Location in Sri Lanka -->
            <div>
              <label for="location" class="block text-sm font-medium text-gray-700 mb-2">Business Location in Sri Lanka</label>
              <select 
                id="location" 
                name="location"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200"
              >
                <option value="">Select your area</option>
                <option value="colombo">Colombo District</option>
                <option value="gampaha">Gampaha District</option>
                <option value="kalutara">Kalutara District</option>
                <option value="kandy">Kandy District</option>
                <option value="galle">Galle District</option>
                <option value="matara">Matara District</option>
                <option value="hambantota">Hambantota District</option>
                <option value="jaffna">Jaffna District</option>
                <option value="batticaloa">Batticaloa District</option>
                <option value="trincomalee">Trincomalee District</option>
                <option value="anuradhapura">Anuradhapura District</option>
                <option value="polonnaruwa">Polonnaruwa District</option>
                <option value="kurunegala">Kurunegala District</option>
                <option value="puttalam">Puttalam District</option>
                <option value="ratnapura">Ratnapura District</option>
                <option value="kegalle">Kegalle District</option>
                <option value="badulla">Badulla District</option>
                <option value="monaragala">Monaragala District</option>
                <option value="ampara">Ampara District</option>
                <option value="vavuniya">Vavuniya District</option>
                <option value="mannar">Mannar District</option>
                <option value="mullaitivu">Mullaitivu District</option>
                <option value="kilinochchi">Kilinochchi District</option>
                <option value="nuwara-eliya">Nuwara Eliya District</option>
                <option value="matale">Matale District</option>
                <option value="other">Other</option>
              </select>
            </div>

            <!-- Service Interest -->
            <div>
              <label for="service" class="block text-sm font-medium text-gray-700 mb-2">Service Interest</label>
              <select 
                id="service" 
                name="service"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200"
              >
                <option value="">Select service type</option>
                <option value="seo-audit">Free SEO Audit</option>
                <option value="local-seo">Local SEO Sri Lanka</option>
                <option value="technical-seo">Technical SEO</option>
                <option value="cms-seo">CMS SEO (WordPress, Shopify)</option>
                <option value="ecommerce-seo">E-commerce SEO</option>
                <option value="industry-seo">Industry-Specific SEO</option>
                <option value="content-seo">Content SEO</option>
                <option value="link-building">Link Building</option>
                <option value="full-service">Complete SEO Package</option>
                <option value="consultation">SEO Consultation</option>
              </select>
            </div>

            <!-- Budget Range -->
            <div>
              <label for="budget" class="block text-sm font-medium text-gray-700 mb-2">Monthly Budget (LKR)</label>
              <select 
                id="budget" 
                name="budget"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200"
              >
                <option value="">Select budget range</option>
                <option value="under-25k">Under LKR 25,000</option>
                <option value="25k-50k">LKR 25,000 - 50,000</option>
                <option value="50k-100k">LKR 50,000 - 100,000</option>
                <option value="100k-200k">LKR 100,000 - 200,000</option>
                <option value="200k-plus">LKR 200,000+</option>
                <option value="discuss">Let's Discuss</option>
              </select>
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Project Details</label>
              <textarea 
                id="message" 
                name="message" 
                rows="4"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200"
                placeholder="Tell us about your business goals, current challenges, and what you'd like to achieve with SEO in Sri Lanka..."
              ></textarea>
            </div>

            <!-- Submit Button -->
            <button 
              type="submit"
              class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-semibold py-4 px-6 rounded-lg hover:from-blue-700 hover:to-indigo-700 transform transition-all duration-200 hover:scale-105 shadow-lg hover:shadow-xl"
            >
              Get My Free SEO Consultation
              <svg class="w-5 h-5 ml-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </button>

            <!-- Privacy Notice -->
            <p class="text-xs text-gray-500 text-center">
              By submitting this form, you agree to our privacy policy. We'll only use your information to provide SEO services and won't share it with third parties.
            </p>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-8">
          <!-- Contact Methods -->
          <div class="bg-white rounded-2xl p-8 shadow-lg">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Contact Information</h3>
            
            <div class="space-y-6">
              <!-- Email -->
              <div class="flex items-start">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Email Us</h4>
                  <p class="text-gray-600">srilanka@seowebster.com</p>
                  <p class="text-sm text-gray-500">We'll respond within 24 hours</p>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start">
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Call Us</h4>
                  <p class="text-gray-600">+94 11 123 4567</p>
                  <p class="text-sm text-gray-500">Mon-Fri 9AM-6PM (LK Time)</p>
                </div>
              </div>

              <!-- WhatsApp -->
              <div class="flex items-start">
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.786"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">WhatsApp</h4>
                  <p class="text-gray-600">+94 77 123 4567</p>
                  <p class="text-sm text-gray-500">Quick responses via WhatsApp</p>
                </div>
              </div>

              <!-- Office Location -->
              <div class="flex items-start">
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Office Location</h4>
                  <p class="text-gray-600">Colombo 03, Sri Lanka</p>
                  <p class="text-sm text-gray-500">Serving all of Sri Lanka</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Quick Stats -->
          <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-2xl p-8 border border-blue-100">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Why Choose Us in Sri Lanka?</h3>
            <div class="grid grid-cols-2 gap-6">
              <div class="text-center">
                <div class="text-2xl font-bold text-blue-600 mb-1">150+</div>
                <div class="text-sm text-gray-600">LK Clients Served</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-blue-600 mb-1">92%</div>
                <div class="text-sm text-gray-600">Success Rate</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-blue-600 mb-1">24hrs</div>
                <div class="text-sm text-gray-600">Response Time</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-blue-600 mb-1">5+ Yrs</div>
                <div class="text-sm text-gray-600">LK Experience</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">Frequently Asked Questions</h2>
        <p class="text-lg text-gray-600">Common questions about our SEO services in Sri Lanka</p>
      </div>

      <div class="space-y-4">
        <div class="border border-gray-200 rounded-lg">
          <button class="w-full px-6 py-4 text-left font-semibold text-gray-900 hover:bg-gray-50 focus:bg-gray-50 transition-colors">
            How quickly can I see SEO results in Sri Lanka?
            <svg class="w-5 h-5 float-right mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="px-6 pb-4 text-gray-600 hidden">
            Most businesses in Sri Lanka start seeing improvements within 3-6 months. Local SEO results can appear faster, sometimes within 4-8 weeks, while competitive national keywords may take 6-12 months to achieve top rankings.
          </div>
        </div>

        <div class="border border-gray-200 rounded-lg">
          <button class="w-full px-6 py-4 text-left font-semibold text-gray-900 hover:bg-gray-50 focus:bg-gray-50 transition-colors">
            Do you provide SEO services in Sinhala and Tamil?
            <svg class="w-5 h-5 float-right mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="px-6 pb-4 text-gray-600 hidden">
            Yes! We offer multilingual SEO services for English, Sinhala, and Tamil content. Our team includes native speakers who can optimize content for local Sri Lankan audiences in their preferred language.
          </div>
        </div>

        <div class="border border-gray-200 rounded-lg">
          <button class="w-full px-6 py-4 text-left font-semibold text-gray-900 hover:bg-gray-50 focus:bg-gray-50 transition-colors">
            What's included in the free SEO audit?
            <svg class="w-5 h-5 float-right mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="px-6 pb-4 text-gray-600 hidden">
            Our free audit includes technical SEO analysis, keyword opportunities, competitor analysis, local SEO assessment, and a customized action plan for improving your rankings in the Sri Lankan market.
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Form submission handling
  document.getElementById('sri-lanka-contact-form')?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(this);
    const data = Object.fromEntries(formData.entries());
    
    // Add country information
    data.country = 'Sri Lanka';
    data.source = 'LK Contact Form';
    
    // Here you would typically send the data to your backend
    console.log('Sri Lanka form submission:', data);
    
    // Show success message
    alert('Thank you! We\'ll get back to you within 24 hours with your free SEO consultation.');
    
    // Reset form
    this.reset();
  });

  // FAQ toggle functionality
  document.querySelectorAll('.border button').forEach(button => {
    button.addEventListener('click', function() {
      const content = this.nextElementSibling;
      const icon = this.querySelector('svg');
      
      if (content.classList.contains('hidden')) {
        content.classList.remove('hidden');
        icon.style.transform = 'rotate(180deg)';
      } else {
        content.classList.add('hidden');
        icon.style.transform = 'rotate(0deg)';
      }
    });
  });
</script>