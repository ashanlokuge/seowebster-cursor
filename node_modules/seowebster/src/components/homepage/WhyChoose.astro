---

<section class="bg-white py-16 lg:py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12 lg:mb-16">
      <div class="text-sm font-semibold text-[#ff6400] uppercase tracking-wider mb-2">
        Why Choose Us
      </div>
      <h2 class="text-3xl lg:text-4xl xl:text-5xl font-bold text-[#272d3e] mb-4 leading-tight">
        What We Offer
      </h2>
      <p class="text-lg lg:text-xl text-[#6B7280] max-w-2xl mx-auto">
        We deliver strategic SEO with real impact, not empty promises.
      </p>
    </div>

    <!-- Reasons Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {reasons.map((reason) => (
        <div class="group bg-white rounded-xl p-6 lg:p-8 shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100 hover:border-[#ff6400]/20 hover:-translate-y-1 cursor-pointer text-center">
          <!-- Icon -->
          <div class={`w-16 h-16 ${reason.iconBg} ${reason.iconColor} ${reason.hoverBg} ${reason.hoverColor} rounded-full flex items-center justify-center mb-6 mx-auto transition-all duration-300 group-hover:scale-110 shadow-sm`}>
            <Fragment set:html={reason.icon} />
          </div>
          
          <!-- Content -->
          <div>
            <h3 class="text-xl lg:text-2xl font-bold text-[#272d3e] mb-3 group-hover:text-[#ff6400] transition-colors duration-300">
              {reason.title}
            </h3>
            <p class="text-[#6B7280] text-base lg:text-lg leading-relaxed">
              {reason.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA Section -->
    <div class="text-center mt-12 lg:mt-16">
      <div class="bg-gradient-to-r from-[#ff6400] to-[#e55a00] rounded-2xl p-8 lg:p-10 shadow-xl">
        <h3 class="text-2xl lg:text-3xl font-bold text-white mb-4">
          Ready to see the difference?
        </h3>
        <p class="text-white text-opacity-90 text-lg mb-6 max-w-2xl mx-auto">
          Join hundreds of businesses that trust SEOWebster to deliver real SEO results that drive growth.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/contact" 
            class="inline-flex items-center justify-center px-6 py-3 bg-white text-[#ff6400] font-semibold rounded-lg hover:bg-gray-50 transform transition-all duration-200 hover:scale-105 shadow-md"
          >
            Start Your Free Audit
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a 
            href="/case-studies" 
            class="inline-flex items-center justify-center px-6 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-[#ff6400] transform transition-all duration-200"
          >
            View Case Studies
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Custom hover effects for better performance */
  .group:hover {
    transform: translateY(-4px);
  }
  
  /* Smooth transitions for all interactive elements */
  .group * {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Enhanced shadow on hover */
  .group:hover .shadow-sm {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
</style> 